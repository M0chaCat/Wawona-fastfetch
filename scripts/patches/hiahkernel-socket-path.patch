--- a/src/HIAHKernel/Core/HIAHKernel.m
+++ b/src/HIAHKernel/Core/HIAHKernel.m
@@ -52,7 +53,16 @@ - (void)setupControlSocket {
   // Use NSTemporaryDirectory() - the iOS-proper way for temp files/sockets
   // This directory is always accessible, writable, and short enough for socket
   // paths
+#if TARGET_OS_SIMULATOR
+  // On Simulator, NSTemporaryDirectory() is too long for unix sockets.
+  // Use /tmp which is mapped from macOS host.
+  NSString *uid = [NSString stringWithFormat:@"%d", getuid()];
+  self.socketDirectory = [@"/tmp/wawona_sim_" stringByAppendingString:uid];
+  [[NSFileManager defaultManager] createDirectoryAtPath:self.socketDirectory withIntermediateDirectories:YES attributes:@{NSFilePosixPermissions: @0700} error:nil];
+#else
   self.socketDirectory = NSTemporaryDirectory();
+#endif
+
   NSLog(@"[HIAHKernel] Using NSTemporaryDirectory for sockets: %@",
         self.socketDirectory);
